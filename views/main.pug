        //if IE 9
          link#ie9style(href='css/ie9.css', rel='stylesheet')
        // start: Favicon
        link(rel='shortcut icon', href='img/favicon.ico')
        // end: Favicon
        style(type='text/css').
            body { background: url(img/bg-login.jpg) !important; }
    body(onload='init()')
        .container-fluid-full
            .row-fluid
                .span1
                .row-fluid.span10
                    .box-content
                        form.form-horizontal
                            fieldset
                                table.table.table-striped
                                    tbody#listtable

                        hr
                    // /span
                // /row
            // /.fluid-container
        // /fluid-row
        #common-Modal1.common-modal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
            .modal-content
                ul.list-inline.item-details
                    li
                        a(href='http://themifycloud.com') Admin templates
                    li
                        a(href='http://themescloud.org') Bootstrap themes
        // start: JavaScript
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
        script(type='text/javascript').
            function init(){
                var data = sessionStorage.getItem("data");

                data = JSON.parse(data);

                for(var i = 0; i < data.length; i++){
                    var id = data[i]['id']
                    var workload = data[i]['workload']
                    var current = workload & 65535;
                    var total = workload >> 16;

                    var fraction = current+"/"+total;
                    var percent = current/total *100;
                    percent = percent.toFixed(2)
                    var tbody = document.getElementById('listtable');

                    var row = tbody.insertRow(tbody.rows.length); // 하단에 추가

                    row.innerHTML = "<td style=\"width:10%;\">Device #"+id+"</td>\n" +
                        "\t\t\t\t\t\t\t\t\t<td>\n" +
                        "\t\t\t\t\t\t\t\t\t\t<div>작업량: "+percent+"% <span>&nbsp;("+fraction+")</span></div>\n" +
                        "\n" +
                        "\t\t\t\t\t\t\t\t\t\t<div class=\"progress progress-striped progress-success active\">\n" +
                        "\t\t\t\t\t\t\t\t\t\t\t<div class=\"bar\" style=\"width: "+percent+"%;\"></div>\n" +
                        "\n" +
                        "\t\t\t\t\t\t\t\t\t\t</div>\n" +
                        "\t\t\t\t\t\t\t\t\t</td>\n" +
                        "\t\t\t\t\t\t\t\t\t<td style=\"width:10%;\">\n" +
                        "\t\t\t\t\t\t\t\t\t\t<div>\n" +
                        "\t\t\t\t\t\t\t\t\t\t\t<a class=\"quick-button-small span1\" style=\"width: 100%; float:right;\" href=\'/\'>\n" +
                        "\t\t\t\t\t\t\t\t\t\t\t\t<i class=\"icon-fullscreen\"></i>\n" +
                        "\t\t\t\t\t\t\t\t\t\t\t\t<p>detail</p>\n" +
                        "\t\t\t\t\t\t\t\t\t\t\t</a>\n" +
                        "\t\t\t\t\t\t\t\t\t\t</div>\n" +
                        "\t\t\t\t\t\t\t\t\t</td>"

                }


            }
// end: JavaScript
