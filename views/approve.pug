        link(rel='shortcut icon', href='../img/favicon.ico')
        // end: Favicon
        style(type='text/css').
            body { background: url(../img/bg-login.jpg) !important; }


    body
        .container-fluid-full
            .row-fluid
                .span1
                .row-fluid.span10
                    .box
                        .box-header(data-original-title='')
                            h2
                                i.halflings-icon.white.edit
                                span.break
                                | Admin Page
                            .box-icon
                                a.btn-close(href='/')
                                    i.halflings-icon.white.remove
                        .box-content
                            form.form-horizontal
                                fieldset
                                    each row in rows
                                        .task.high
                                            .desc
                                                .title=row.email
                                                div= 'name : ' + row.name
                                            .time
                                                .date
                                                    -var method = "PutRequest(\"" + row.email+"\")"
                                                    button.btn_approve.btn(type='button' style='float: right;' onclick=method) approve
                                                div  &nbsp;


        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
        script(type='text/javascript').
            function _ajax_request(url, data, callback, method, error) {
                return jQuery.ajax({
                    url: url,
                    type: method,
                    data: data,
                    success: callback,
                    error: error
                });
            }
            function PutRequest(data) {
                _ajax_request("/admin/approve",{email: data}, function(data){
                    if(data.type){
                        alert("SUCCESS");
                        location.reload();
                    }else {
                        alert(data.data);
                        location.reload();
                    }
                },'PUT',function(jqXHR, exception){
                    var msg = '';
                    if (jqXHR.status === 0) {
                        msg = 'Not connect.\n Verify Network.';
                    } else if (jqXHR.status == 404) {
                        msg = 'Requested page not found. [404]';
                    } else if (jqXHR.status == 500) {
                        msg = 'Internal Server Error [500].';
                    } else if (exception === 'parsererror') {
                        msg = 'Requested JSON parse failed.';
                    } else if (exception === 'timeout') {
                        msg = 'Time out error.';
                    } else if (exception === 'abort') {
                        msg = 'Ajax request aborted.';
                    } else {
                        msg = 'Uncaught Error.\n' + jqXHR.responseText;
                    }
                    alert(msg);
                });
            }
